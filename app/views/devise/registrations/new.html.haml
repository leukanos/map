.container.devise
  = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
    = f.error_notification
    %h2.form-signin-heading= t('.sign_up')
    .form-group
      = f.input :email, :required => true, :autofocus => true, label_html: { class: 'sr-only' }, input_html: { class: 'form-control' },
          placeholder: t('.email')
      = f.input :password, :required => true, label_html: { class: 'sr-only' }, input_html: { class: 'form-control' },
          placeholder: t('.password')
      = f.input :password_confirmation, :required => true, label_html: { class: 'sr-only' }, input_html: { class: 'form-control' },
          placeholder: t('.password_confirmation')
    .form-actions
      = f.button :submit, t('.sign_up'), class: 'btn btn-lg btn-primary btn-block'
    = render "devise/shared/links"