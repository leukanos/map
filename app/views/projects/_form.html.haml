= simple_form_for @project do |f|
  .col-md-5.col-md-offset-1
    =f.input :short_name, input_html: { class: "form-control input-sm" }, label: 'Nazwa skrócona'
    =f.input :name, input_html: { class: "form-control input-sm" }, label: 'Nazwa'
    =f.association :assigned_to, collection: collect_users , input_html: { class: "form-control input-sm" }, label: 'Przypisany do'
    =f.input :parent_id, collection: collect_projects_parents(f.object.id), input_html: { class: "form-control input-sm" }, label: 'Projekt nadrzędny',
      selected: f.object.parent_id, :include_blank => true
    =f.association :users, label_method: :full_name , input_html: { class: "form-control input-sm select2" }, label: 'Osoby w projekcie'
    %hr
    = f.button :submit, 'Zapisz', class: 'btn btn-success'
    = link_to 'Anuluj', projects_path, class: 'btn btn-sm btn-default'